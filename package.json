{
  "name": "express-typescript-boilerplate",
  "version": "2.4.1",
  "description": "A boilerplate for a Node.js server with Express framework. Written in Typescript. Supports containerization using Docker.",
  "homepage": "https://github.com/erkstruwe/express-typescript-boilerplate",
  "bugs": {
    "url": "https://github.com/erkstruwe/express-typescript-boilerplate/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/erkstruwe/express-typescript-boilerplate.git"
  },
  "main": "index.js",
  "engines": {
    "node": ">=8 <=10",
    "npm": ">=5 <=6"
  },
  "scripts": {
    "start": "node index.js",
    "start:prod": "cross-env NODE_ENV=production npm start",
    "start:dev": "nodemon --watch src --ignore src/views --watch package.json --watch .env --ext js,json,ts --exec \"npm start\"",
    "lint": "tslint .",
    "lint:fix": "npm run lint -- --fix",
    "build": "tsc . --noEmit",
    "docker:build": "cross-var docker build -t $npm_package_name:$npm_package_version .",
    "docker:run": "cross-var docker run $npm_package_name:$npm_package_version",
    "test": "npm run lint && npm run build",
    "preversion": "npm run lint && npm test",
    "postversion": "git push origin master --tags"
  },
  "author": "Erk Struwe <estruwe@estruwe.de>",
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "cross-env": "^5.1.6",
    "express": "^4.16.3",
    "helmet": "^3.12.1",
    "pug": "^2.0.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^10.11.0",
    "cross-var": "^1.1.0",
    "nodemon": "^1.18.4",
    "tslint": "^5.11.0"
  }
}
